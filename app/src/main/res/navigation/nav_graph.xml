<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.myorbitel.presentation.fragments.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_topUpBalanceFrag"
            app:destination="@id/topUpBalanceFrag" />
        <action
            android:id="@+id/action_homeFragment_to_historyOperation"
            app:destination="@id/historyOperation" />
        <action
            android:id="@+id/action_homeFragment_to_tariffDescription"
            app:destination="@id/tariffDescription" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.myorbitel.presentation.fragments.auth.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/historyOperation"
        android:name="com.example.myorbitel.presentation.fragments.HistoryOperation"
        android:label="fragment_history_operation"
        tools:layout="@layout/fragment_history_operation" />
    <fragment
        android:id="@+id/topUpBalanceFrag"
        android:name="com.example.myorbitel.presentation.fragments.TopUpBalanceFrag"
        android:label="fragment_top_up_balance"
        tools:layout="@layout/fragment_top_up_balance" />
    <fragment
        android:id="@+id/tariffDescription"
        android:name="com.example.myorbitel.presentation.fragments.TariffDescription"
        android:label="fragment_tariff_description"
        tools:layout="@layout/fragment_tariff_description" />
</navigation>